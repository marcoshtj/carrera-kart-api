# Environment
NODE_ENV=development

# Server
PORT=3000

# Database (use uma das opções abaixo)
# Para MongoDB local:
# MONGODB_URI=mongodb://localhost:27017/carrera-kart

# Para MongoDB Atlas (substitua pela sua string de conexão):
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Admin User (será criado automaticamente)
ADMIN_NAME=Admin Carrera Kart
ADMIN_EMAIL=admincarrerakart@carrerakart.com.br
ADMIN_PASSWORD=12345678

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
